
@{
    ViewBag.Title = "Personal Information";
}

<h2>@ViewBag.Title</h2>

<style>
    .text-center {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

        .text-center p {
            display: flex;
            align-items: center;
        }

        .text-center b {
            margin-right: 10px;
        }
</style>

<div class="text-center">
    <p><b>Name : </b>@ViewBag.Name</p>
    <p><b>ID : </b>@ViewBag.ID</p>
    <p><b>Email : </b>@ViewBag.Email</p>
    <p><b>Contract Number : </b>@ViewBag.ContactNum</p>
    <p><b>Hieght : </b>@ViewBag.Hieght</p>
    <p><b>Blood Group : </b>@ViewBag.BloodGrp</p>
    <p><b>Department : </b>@ViewBag.Dept</p>
</div>